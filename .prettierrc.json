{
	"semi": true,
	"trailingComma": "es5",
	"singleQuote": true,
	"tabWidth": 2,
	"useTabs": true,
	"printWidth": 80,
	"bracketSpacing": true,
	"overrides": [
		{
			"files": ["*.js", "*.ts"],
			"options": {
				"tabWidth": 4,
				"useTabs": true,
				"singleQuote": false
			}
		},
		{
			"files": ["*.tsx"],
			"options": {
				"semi": false,
				"useTabs": true
			}
		},
		{
			"files": ["*.json", "*.jsonc"],
			"options": {
				"tabWidth": 4,
				"useTabs": true,
				"singleQuote": false
			}
		},
		{
			"files": "*.md",
			"options": {
				"proseWrap": "always",
				"useTabs": true
			}
		}
	]
}
